<Window x:Class="RYLAdminApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RYL Admin Mail Panel" Height="773" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F" Foreground="White">

    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="📨 Send Mail to Player" 
                       FontSize="22" FontWeight="Bold" Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Player UID:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPlayerID" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Item ID (optional):" Margin="0,0,0,5"/>
            <TextBox x:Name="txtItemID" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Message:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtMessage" Height="80" TextWrapping="Wrap" 
                     AcceptsReturn="True" Margin="0,0,0,10"/>

            <Button Content="✅ Send Mail" Height="40" 
                    Click="BtnSendMail_Click"
                    Background="Green" Foreground="White" 
                    FontWeight="Bold" Margin="0,10,0,0"/>

            <TextBlock Text="📬 Mail History:" FontWeight="Bold" Margin="0,20,0,5"/>
            <ListBox x:Name="lstMailHistory" Height="150" Background="#2E2E3F"/>

            <TextBlock x:Name="lblResult" Margin="0,10,0,0" 
                       FontSize="14" Foreground="Orange" 
                       Text=""/>
        </StackPanel>
    </Grid>
</Window>
