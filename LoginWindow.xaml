<Window x:Class="RYLAdminApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" Height="357" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F" Foreground="White"
        ResizeMode="NoResize">

    <Grid Margin="30,30,30,3">
        <StackPanel>

            <!-- Header -->
            <TextBlock Text="🔑 Admin Login"
                       FontSize="26" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Account -->
            <TextBlock Text="Account" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtAdminAccount" Height="35" FontSize="14"
                     Background="#2E2E3E" Foreground="White"
                     Padding="5" BorderThickness="0" />

            <!-- Password -->
            <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <PasswordBox x:Name="txtAdminPassword" Height="35" FontSize="14"
                         Background="#2E2E3E" Foreground="White"
                         Padding="5" BorderThickness="0"/>

            <!-- Login Button -->
            <Button Content="Login"
                    Height="40" Margin="0,25,0,0"
                    Background="#FF7F50" Foreground="White"
                    FontWeight="Bold" Click="BtnAdminLogin_Click"/>

            <!-- Status Label -->
            <TextBlock x:Name="lblStatus"
                       Foreground="Orange"
                       FontSize="14" Margin="0,15,0,0"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
